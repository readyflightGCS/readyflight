{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@libs/*": ["../libs/src/*.js"]
    }
  },
  "references": [{ "path": "../libs/src" }],
  "include": [
    "src/**/*",
    "../libs/src/"
  ]
}

